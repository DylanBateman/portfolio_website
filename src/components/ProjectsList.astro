---
import ProjectCard from './project-card.astro'
import { getCollection } from 'astro:content'

const projects = await getCollection('projects')
---

<section id="projects-list" class="mb-12">
  <div class="flex items-center mb-4">
    <div class="text-sm text-[#439A86] tracking-wider">Featured Projects</div>
    <div
      class="h-px bg-gradient-to-r from-[#439A86]/50 to-transparent flex-grow ml-4"
    >
    </div>
  </div>
  <div class="space-y-8">
    {projects.map((project) => <ProjectCard project={project} />)}
  </div>
  <div class="mt-6">
    <a
      href="/projects"
      class="group flex items-center gap-3 transition-colors text-sm text-gray-500 hover:text-[#439A86]"
    >
      <span class="font-mono">View all projects</span>
      <span
        class="w-4 h-4 opacity-0 group-hover:opacity-100 group-hover:translate-x-1 transition-all -ml-2 -mt-1"
        >â†’</span
      >
    </a>
  </div>
</section>
